<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml"
	schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
   <!-- 
      In populating the teiHeader, prefer structured data whenever possible, to 
      simplify machine processing and augment discovery.
   -->
   <teiHeader>
      <fileDesc>
         <titleStmt>
            <!-- 
            The titleStmt contains the title given to the electronic work.
         -->

            <title>Transcript of an Interview with Narrator</title>
            <!-- 
               The title should be generic and simple.  Omit dates, name(s) of
               projects, and other information recorded elsewhere in the teiHeader.
            -->
            
            <!-- 
               Do not use <editor>, <author>, <principal>, or other role terms; use <respStmt> instead.
               Do not provide information about the interviewer or the narrator here;
               the titleStmt only contains data about the electronic document, not the interview, the project, etc.
            -->
            <respStmt>
               <persName>Jane Doe</persName>
               <resp ref="http://id.loc.gov/vocabulary/relators/edt.html">editor</resp>
            </respStmt>
         </titleStmt>
         <publicationStmt>
            <!-- 
               The form and content of the publicationStmt is highly project specific.
               Projects should followthe TEI Guidelines in developing a 
               general publication statement.  We do recommend supplying an
               <authority> element that indicates the name of the person or other 
               agency responsible for making the work available.
            -->
            <authority><orgName>The Dartmouth Vietnam Project</orgName></authority>

            <!-- Record the identifier of the object in the DDHI OH Repository -->
            <idno>dvp-001</idno>
         </publicationStmt>
         
         <sourceDesc>
            <!-- 
               The <sourceDesc> element describes the source from which an electronic text 
               was derived or generated.
            -->
            <recordingStmt>
               <!-- 
                  The <recordingStmt> describes the recording or set of recordings used as 
                  the basis for transcription of a spoken text.
               -->
               
               <!-- The <recording> element contains details about the audio or video recording
               that was used as the source of the text.  At minimum, this element should contain
               the length of the recording in machine-readable, ISO-standard format.  When possible, 
               supply the date on which the recording was made.  When possible, projects
               should supply information about the medium: its type; the equipement used
               a @type attribute (audio or video), the length (duration) of the record in machine-readable,
               ISO-standard format (@dur-iso), and, whenever relevant and possible, a link to any
               intermediate transcription (such as the DVP Word docs) that may exist, or that may have
               been used in creating the electronic text.  This link is provided via the facsimile 
               attribute (@facs).
               -->
               <recording xml:id="primary_recording" type="audio" dur-iso="P1H25M">
                  <p>Recorded at <placeName>place</placeName>. on <date when-iso="2015-03-01">March 1st, 2015</date></p>
                  <media url="path_to_file" mimeType="MIMEaudio/wav"/>
               </recording>
            </recordingStmt>
            
            <!-- When relevant and possible, include a reference to any intermediat transcription(s) that 
            may have been used in creating the electronic text. The reference should include catalog information
            if the recording is held in a library or archive, or a ref pointer to the actual file. -->
            <bibl xml:id="primary_transcription">
               <ref target="path_to_file">Primary transcription</ref>
            </bibl>
         </sourceDesc>
      </fileDesc>
      <encodingDesc>
         <projectDesc>
            <p>Recorded, transcribed, and encoded for the <orgName>Dartmouth Vietnam
                  Project</orgName></p>
         </projectDesc>
         
         <!-- 
            The DDHI tools should include this kind of information if possible; encoders
            should not be required to provide it.  This information is useful in tracing
            bugs and other automation artifacts.
         -->
         <appInfo>
            <application ident="pandoc" version="2.8">
               <label>pandoc 2.8</label>
            </application>
            <application version="1.0.0" ident="ddhi-tool">
               <label>ddhi-tool 1.0.0</label>
            </application>
         </appInfo>
      </encodingDesc>
      <profileDesc>
         <particDesc>
            <person xml:id="SOLOMON"><persName>Hannah Solomon</persName></person>
            <person xml:id="TAVELA"><persName>Susan Tavela</persName></person>
         </particDesc>
         <settingDesc>
            <place>
               <placeName>Rauner Library</placeName>
            </place>
         </settingDesc>
      </profileDesc>
   </teiHeader>
   <text>
      <body>
         <p>Some text here.</p>
      </body>
   </text>
</TEI>
